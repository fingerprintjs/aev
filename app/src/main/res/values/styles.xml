<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PlaygroundPRO.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="MainActionButton" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_action_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="SecondaryActionButton" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_secondary_btn</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAlignment">center</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">8dp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>